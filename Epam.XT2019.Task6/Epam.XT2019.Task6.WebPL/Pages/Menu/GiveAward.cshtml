@using Epam.XT2019.Task6.WebPL.Model
@using Epam.XT2019.Task6.Entities

@{

    Page.Visibility3 = "invisible";
    Page.Title = "Reward";
    Page.Lbl1 = "UserId";
    Page.Lbl2 = "AwardId";
    Page.Btn = "Reward";
    Page.Action = "GiveAward.cshtml";
    Layout = "~/Pages/Menu/_MenuLayout1.cshtml";
    if (!User.IsInRole("Admins") && !User.IsInRole("User"))
    {
        Response.Redirect("~");
        return;
    }

    if (!User.Identity.IsAuthenticated)
    {
        Response.Redirect("~");
        return;
    }

    string uId = Request["UserId"];
    string awId = Request["AwardId"];
    int.TryParse(uId, out int uNumId);
    int.TryParse(awId, out int awNumId);

    if (IsPost)
    {
        if (LogicProvider.Rwrd(uNumId, awNumId))
        {
            <div class="alert alert-primary" role="alert">
                <label>Success</label>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
            <label>Failed.Please check data.</label>
            </div>
        }
    }
}