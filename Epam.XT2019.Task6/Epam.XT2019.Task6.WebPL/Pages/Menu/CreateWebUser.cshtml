@using Epam.XT2019.Task6.WebPL.Model
@using Epam.XT2019.Task6.LogicContracts;
@using Epam.XT2019.Task6.Ioc;
@{

    Page.Title = "Registration";
    Page.Lbl1 = "UserName";
    Page.Visibility3 = "invisible";
    Page.Lbl2 = "Password";
    Page.Btn = "Register";
    Page.Action = "CreateWebUser.cshtml";
    Page.Type2 = "password";
    Layout = "~/Pages/Menu/_MenuLayout1.cshtml";

    string uName = Request["Username"];

    string pass = Request["Password"];

    if (IsPost)
    {
        if (LogicProvider.CrtWUsr(uName, pass) == 1)
        {
            <div class="alert alert-primary" role="alert">
                <label>Success</label>
            </div>
            Response.Redirect("~/Login");
        }
        if (LogicProvider.CrtWUsr(uName, pass) == 0)
        {
            <div class="alert alert-danger" role="alert">
                <label>User already exists.</label>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <label>Somthing goes wrong.</label>
            </div>
        }






    }
}