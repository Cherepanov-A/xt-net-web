<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Page.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

</head>
<body>
    <div>
        @RenderPage("~/_HeaderPartial.cshtml")

    </div>
    <div class="container">
        <div class="row" style="height: 50px"></div>
        <div class="row align-items-end" >
            <div class="col-sm-2"></div>
            <div class="col">
                <h4 class="text-center text-primary ">@Page.Title</h4>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="row align-items-center mt-2">
            <div class="col-sm-3 col-xs-3 col-md-3"></div>
            <div class="col-sm-6 col-xs-6 col-md-6">
                <form action="@Page.Action" method="post">
                    <div class="input-group mb-3 @Page.Visibility1" style="width: 100%">
                        <div class="input-group-prepend" >
                            <span class="input-group-text" style="width: 100px" id="basic-addon1">@Page.Lbl1</span>
                        </div>
                        <input type="@Page.Type1" class="form-control" name="@Page.Lbl1" style="width: 100%" aria-label="@Page.Lbl1" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3 @Page.Visibility2" style="width: 100%">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="width: 100px" id="basic-addon1">@Page.Lbl2</span>
                        </div>
                        <input type="@Page.Type2" class="form-control" name="@Page.Lbl2" aria-label="@Page.Lbl2" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3 @Page.Visibility3" style="width: 100%">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="width: 100px" id="basic-addon1">@Page.Lbl3</span>
                        </div>
                        <input type="@Page.Type3" class="form-control" style="width: 100px" name="@Page.Lbl3" aria-label="@Page.Lbl3" aria-describedby="basic-addon1">
                    </div>
                    <button type="submit" class="btn btn-primary">@Page.Btn</button>
                </form>
                @*<p class="mt-2">Or you can <a href="~/signup">Sign up</a></p>*@
            </div>
            <div class="col-sm-3 col-xs-3 col-md-3"></div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script src="~/Scripts/moment.min.js"></script>

    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>







